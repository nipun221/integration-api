{
  "info": {
    "_postman_id": "fa1780f0-e89a-4ca0-914d-c99b5850ee5e",
    "name": "Integration API Tests",
    "description": "Integration tests for a simple Items API running on http://localhost:3000. Endpoints:\n- GET /health\n- POST /items\n- GET /items\n- GET /items/:id\n\nThese requests are used in CI (Jenkins + Newman) to verify that the API and database work together correctly.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "29661140"
  },
  "item": [
    {
      "name": "health check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/health",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "health"
          ]
        },
        "description": "Simple health check endpoint for the Items API."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Health status is ok\", function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json.status).to.eql(\"ok\");",
              "});"
            ]
          }
        }
      ],
      "response": []
    },
    {
      "name": "create item",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Americano\",\n  \"price\": 150\n}\n"
        },
        "url": {
          "raw": "http://localhost:3000/items",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "items"
          ]
        },
        "description": "Creates a new item in the database with name and price."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Returns 201 Created\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Response has id, name and price\", function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json).to.have.property('id');",
              "    pm.expect(json).to.have.property('name');",
              "    pm.expect(json).to.have.property('price');",
              "});",
              "",
              "pm.test(\"Types of fields are correct\", function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json.id).to.be.a('number');",
              "    pm.expect(json.name).to.be.a('string');",
              "    pm.expect(json.price).to.be.a('number');",
              "});",
              "",
              "// Save the created item id for later requests",
              "const created = pm.response.json();",
              "pm.collectionVariables.set('last_item_id', created.id);"
            ]
          }
        }
      ],
      "response": []
    },
    {
      "name": "get items",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/items",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "items"
          ]
        },
        "description": "Returns the list of all items."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response is an array\", function () {",
              "    const json = pm.response.json();",
              "    pm.expect(Array.isArray(json)).to.be.true;",
              "});",
              "",
              "pm.test(\"At least one item exists\", function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json.length).to.be.above(0);",
              "});",
              "",
              "pm.test(\"Items have id, name and price\", function () {",
              "    const json = pm.response.json();",
              "    const item = json[0];",
              "    pm.expect(item).to.have.property('id');",
              "    pm.expect(item).to.have.property('name');",
              "    pm.expect(item).to.have.property('price');",
              "});"
            ]
          }
        }
      ],
      "response": []
    },
    {
      "name": "get one item",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/items/{{last_item_id}}",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "items",
            "{{last_item_id}}"
          ]
        },
        "description": "Fetch a single item by id (using id from the create item request)."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has id, name and price\", function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json).to.have.property('id');",
              "    pm.expect(json).to.have.property('name');",
              "    pm.expect(json).to.have.property('price');",
              "});",
              "",
              "pm.test(\"Id matches the created item\", function () {",
              "    const json = pm.response.json();",
              "    const lastId = Number(pm.collectionVariables.get('last_item_id'));",
              "    pm.expect(json.id).to.eql(lastId);",
              "});"
            ]
          }
        }
      ],
      "response": []
    }
  ],
  "event": [],
  "variable": [
    {
      "key": "last_item_id",
      "value": ""
    }
  ]
}
